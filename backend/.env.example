# Anansi Watchdog - Environment Variables Template
# Copy this to .env and fill in your values

# Application Settings
DEBUG=true
ENVIRONMENT=development
APP_NAME=Anansi Watchdog
APP_VERSION=2.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=postgresql://anansi:changeme@localhost:5432/anansi_watchdog
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# MongoDB (for logs)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=anansi_logs

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# AI API Keys (Get from providers)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Tier Limits
FREE_TIER_TESTS_PER_MONTH=100
PRO_TIER_TESTS_PER_MONTH=1000
TEAM_TIER_TESTS_PER_MONTH=10000

# ML Models
ML_MODELS_PATH=./models
USE_GPU=false
MAX_SEQUENCE_LENGTH=512

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage
# AWS_S3_BUCKET=anansi-storage
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
